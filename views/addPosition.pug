extends base

block content
	.container
		.row.mb-3
			.col
				h2.text-danger ポジション追加
		form(method="POST" onsubmit="return avoidDoubleSubmission();")
			.row
				.col
					- for(let i = 0; i < data.opening; i ++)
						include _numbers/_opening.pug
			.row
				.col
					- for(let i = 0; i < data.matsuri; i ++)
						include _numbers/_matsuri.pug
			.row
				.col
					- for(let i = 0; i < data.solo; i ++)
						include _numbers/_solo.pug
			.row
				.col
					- for(let i = 0; i < data.seigaiha; i ++)
						include _numbers/_seigaiha.pug
			.row
				.col
					- for(let i = 0; i < data.zuiun; i ++)
						include _numbers/_zuiun.pug
			.row
				.col
					- for(let i = 0; i < data.hibiki; i ++)
						include _numbers/_hibiki.pug
			.row
				.col
					p パスワードを入力してください
					input#finalPassword.border-secondary.w-75(type="password" name="password")
					button#passwordConfirm.btn.btn-secondary.ml-3(type="button")
						i.fas.fa-check
			.row.mt-3
				.col
					strong ※必ず入力内容をもう一度確認してください。送信後修正はできません。
			.row.mt-3
				.col
					button#submit.btn.btn-primary(type="submit" disabled) 送信
			